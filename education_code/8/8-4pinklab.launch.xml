<?xml version='1.0'?>
<launch>
    <arg name="use_sim_time" default="true" />
    <!-- Common launch -->
    <include file="$(find-pkg-share rmf_demos)/common.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="viz_config_file" value="$(find-pkg-share rmf_demos)/include/pinklab/pinklab.rviz" />
        <arg name="config_file"
            value="$(find-pkg-share rmf_demos_maps)/pinklab/pinklab.building.yaml" />
    </include>

    <!-- TinyRobot fleet adapter -->
    <group>
        <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
            <arg name="use_sim_time" value="$(var use_sim_time)" />
            <arg name="nav_graph_file"
                value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/0.yaml" />
            <arg name="config_file"
                value="$(find-pkg-share rmf_demos)/config/pinklab/tinyRobot_config.yaml" />
        </include>
    </group>

    <!-- DeliveryRobot fleet adapter -->
    <group>
        <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
          <arg name="use_sim_time" value="$(var use_sim_time)"/>
          <arg name="nav_graph_file" value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/1.yaml" />
          <arg name="config_file" value="$(find-pkg-share rmf_demos)/config/pinklab/deliveryRobot_config.yaml"/>
        </include>
      </group>

</launch>