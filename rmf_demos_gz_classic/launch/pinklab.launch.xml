<?xml version='1.0'?>

<launch>
  <arg name="gazebo_version" default="11" />
  <arg name="use_sim_time" default="true" />
  <arg name="failover_mode" default="false" />
  <arg name="robot_name" default="minibot_1"/>

  <!-- Minibot Spawn -->
  <include file="$(find-pkg-share minibot_description)/launch/upload_gazebo_robot.launch.xml">
    <arg name="is_sim" value="true" />
    <arg name="prefix" value="" />
  </include>

  <node pkg="gazebo_ros" exec="spawn_entity.py" name='spawn_robot' output='screen'
    args="-entity $(var robot_name) -topic robot_description -timeout 20.0 -x 30.3932 -y -3.9979 -package_to_model">
    <param name='use_sim_time' value='True' />
  </node>

  <executable cmd="ros2 control load_controller --set-state active joint_state_broadcaster"
    cwd="/home" output="screen" />
  <executable cmd="ros2 control load_controller --set-state active base_controller" cwd="/home"
    output="screen" />

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_demos)/pinklab.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)" />
    <arg name="failover_mode" value="$(var failover_mode)" />
  </include>

  <!-- Simulation launch -->
  <include file="$(find-pkg-share rmf_demos_gz_classic)/simulation.launch.xml">
    <arg name="map_name" value="pinklab" />
    <arg name="gazebo_version" value="$(var gazebo_version)" />
  </include>

</launch>