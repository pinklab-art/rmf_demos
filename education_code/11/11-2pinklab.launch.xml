<?xml version='1.0'?>
<launch>
    <arg name="use_sim_time" default="true" />
    <!-- Common launch -->
    <include file="$(find-pkg-share rmf_demos)/common.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="viz_config_file" value="$(find-pkg-share rmf_demos)/include/pinklab/pinklab.rviz" />
        <arg name="config_file"
            value="$(find-pkg-share rmf_demos_maps)/pinklab/pinklab.building.yaml" />
        <arg name="dashboard_config_file"
            value="$(find-pkg-share rmf_demos_dashboard_resources)/pinklab/dashboard_config.json" />
    </include>

    <!-- TinyRobot fleet adapter -->
    <group>
        <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
            <arg name="use_sim_time" value="$(var use_sim_time)" />
            <arg name="nav_graph_file"
                value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/0.yaml" />
            <arg name="config_file"
                value="$(find-pkg-share rmf_demos)/config/pinklab/tinyRobot_config.yaml" />
        </include>
    </group>

    <!-- DeliveryRobot fleet adapter -->
    <group>
        <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
            <arg name="use_sim_time" value="$(var use_sim_time)" />
            <arg name="nav_graph_file"
                value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/1.yaml" />
            <arg name="config_file"
                value="$(find-pkg-share rmf_demos)/config/pinklab/deliveryRobot_config.yaml" />
        </include>
    </group>

    <!-- launch the free fleet client first -->
    <node name="minibot_free_fleet_client_node" pkg="free_fleet_client_ros2"
        exec="free_fleet_client_ros2" output="both">
        <param name="fleet_name" value="minibot" />
        <param name="robot_name" value="minibot_1" />
        <param name="robot_model" value="minibot" />
        <param name="level_name" value="L1" />
        <param name="dds_domain" value="43" />
        <param name="max_dist_to_first_waypoint" value="10.0" />
        <param name="map_frame" value="map" />
        <param name="robot_frame" value="base_footprint" />
        <param name="nav2_server_name" value="/navigate_to_pose" />
        <param name="use_sim_time" value="False" />
        <param name="dds_domain" value="43" />
    </node>

</launch>